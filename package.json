{
  "name": "bun-elysia-drizzle",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test -- ./test/*.ts",
    "migration:create": "drizzle-kit generate:sqlite",
    "migration:drop": "drizzle-kit drop",
    "migration:run": "bun src/db/migrate.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/eden": "^1.0.12",
    "@elysiajs/jwt": "^1.0.2",
    "@elysiajs/swagger": "^1.0.4",
    "drizzle-orm": "^0.30.9",
    "drizzle-typebox": "^0.1.1",
    "elysia": "^1.0.14"
  },
  "devDependencies": {
    "@types/bun": "^1.1.2",
    "drizzle-kit": "0.20.14",
    "sql-log-prettifier": "^0.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
